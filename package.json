{
  "name": "hedgehog-learn",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test": "echo \"(add tests in /tests)\" && exit 0",
    "deploy:aws": "serverless deploy",
    "remove:aws": "serverless remove",
    "sync:hubdb": "npm run build && node dist/src/sync/push-hubdb.js",
    "sync:content": "npm run build && node dist/src/sync/markdown-to-hubdb.js",
    "sync:pathways": "npm run build && node dist/src/sync/pathways-to-hubdb.js",
    "sync:courses": "npm run build && node dist/src/sync/courses-to-hubdb.js",
    "provision:tables": "npm run build && node dist/scripts/hubspot/provision-tables.js",
    "provision:constants": "npm run build && node dist/scripts/hubspot/update-constants.js",
    "provision:pages": "npm run build && node dist/scripts/hubspot/provision-pages.js",
    "provision:all": "npm run build && npm run provision:tables && npm run sync:courses && npm run sync:pathways && npm run provision:constants && npm run provision:pages"
  },
  "dependencies": {
    "@hubspot/api-client": "^11.0.0",
    "@types/marked": "^5.0.2",
    "dotenv": "^17.2.3",
    "gray-matter": "^4.0.3",
    "marked": "^16.4.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.134",
    "@types/node": "^22.7.4",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "serverless": "^4.1.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  }
}
