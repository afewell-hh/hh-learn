{
  "name": "hedgehog-learn",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "tsc -p tsconfig.json && tsc -p tsconfig.lambda.json",
    "build:scripts-cjs": "tsc -p tsconfig.scripts.cjs.json",
    "lint": "eslint .",
    "format": "prettier --write .",
    "test": "echo \"(add tests in /tests)\" && exit 0",
    "deploy:aws": "serverless deploy",
    "remove:aws": "serverless remove",
    "sync:hubdb": "npm run build && node dist/src/sync/push-hubdb.js",
    "sync:content": "npm run build && node dist/src/sync/markdown-to-hubdb.js",
    "sync:pathways": "npm run build && node dist/src/sync/pathways-to-hubdb.js",
    "sync:courses": "npm run build && node dist/src/sync/courses-to-hubdb.js",
    "sync:catalog": "npm run build && node dist/scripts/hubspot/sync-catalog.js",
    "upload:templates": "npm run build && node dist/scripts/hubspot/upload-templates.js",
    "provision:tables": "npm run build && node dist/scripts/hubspot/provision-tables.js",
    "provision:constants": "npm run build && node dist/scripts/hubspot/update-constants.js",
    "provision:crm-properties": "node scripts/create-crm-properties.js",
    "publish:constants": "npm run build:scripts-cjs && node dist-cjs/scripts/hubspot/publish-constants.js",
    "provision:pages": "npm run build && node dist/scripts/hubspot/provision-pages.js",
    "publish:pages": "npm run build && node dist/scripts/hubspot/publish-pages.js",
    "publish:template": "npm run build:scripts-cjs && node dist-cjs/scripts/hubspot/publish-template.js",
    "validate:template": "npm run build:scripts-cjs && node dist-cjs/scripts/hubspot/validate-template.js",
    "validate:inline-constants": "npm run build:scripts-cjs && node dist-cjs/scripts/hubspot/validate-inline-constants.js",
    "redirect:add": "npm run build && node dist/scripts/hubspot/add-url-redirect.js",
    "export:authoring": "npm run build && node dist/scripts/hubspot/export-course-authoring.js",
    "provision:all": "npm run build && npm run provision:tables && npm run sync:courses && npm run sync:pathways && npm run provision:constants",
    "validate:cms": "npm run build && npm run provision:tables -- --dry-run && npm run provision:constants -- --dry-run && npm run provision:pages -- --dry-run",
    "detect-orphans": "npm run build && node dist/scripts/detect-orphans.js",
    "test:e2e": "npx playwright test --reporter=list"
  },
  "dependencies": {
    "@aws-sdk/client-cognito-identity-provider": "^3.700.0",
    "@aws-sdk/client-dynamodb": "^3.700.0",
    "@aws-sdk/lib-dynamodb": "^3.700.0",
    "@hubspot/api-client": "^11.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/marked": "^5.0.2",
    "dotenv": "^17.2.3",
    "gray-matter": "^4.0.3",
    "jsonwebtoken": "^9.0.2",
    "marked": "^16.4.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@playwright/test": "^1.48.2",
    "@types/aws-lambda": "^8.10.134",
    "@types/node": "^22.7.4",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "prettier": "^3.3.3",
    "serverless": "^3.40.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  }
}
