# HubSpot
HUBSPOT_PRIVATE_APP_TOKEN=  # Required: Private app token with behavioral_events.* and crm.objects.contacts.* scopes
HUBSPOT_ACCOUNT_ID=  # Required: Your HubSpot account/portal ID
HUBDB_PATHWAYS_TABLE_ID=  # Pathways HubDB table ID (use a staging/test table)
HUBDB_COURSES_TABLE_ID=  # Courses HubDB table ID (use a staging/test table)

# AWS (Serverless Framework / GitHub Actions or local)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# App
APP_STAGE=dev  # Deployment stage: dev | staging | production

# v0.3 Auth & Progress Features
ENABLE_CRM_PROGRESS=false  # Set to 'true' to persist events to HubSpot CRM (requires auth)
